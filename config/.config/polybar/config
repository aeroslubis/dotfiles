[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
red = ${xrdb:color1}
orange = ${xrdb:color9}
green = ${xrdb:color10}
yellow = ${xrdb:color11}
blue = ${xrdb:color12}
purple = ${xrdb:color13}
cyan = ${xrdb:color14}
primary = ${colors.blue}
secondary = ${xrdb:color4}
alert = ${xrdb:color1}

[bar/default]
monitor = "LVDS1"
width = 100%
height = 23

offset-x = 0
offset-y = 0
;radius = 16.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.primary}

border-size = 0
border-color = ${colors.background-alt}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

# font-0 = Input:size=10;2
font-0 = Iosevka Term:size=10;2
font-1 = Font Awesome:size=10;2

modules-left = i3
modules-center = xwindow
modules-right = filesystem cpu memory temperature wlan wlan2 volume date

tray-position = right
tray-padding = 2
tray-maxsize = 25

#wm-restack = i3
#override-redirect = false

cursor-click = default
cursor-scroll = ns-resize

[module/cal]
type = custom/script
exec = "date '+%a%l:%M %p'"
interval = 30
format-foreground = ${colors.foreground-alt}
label-font = 4

[module/date]
type = internal/date
interval = 30
time= %a %l:%M %p
date-alt= %d %b %Y
format-foreground = ${colors.foreground-alt}
label = %time%%date% 

[module/xwindow]
type = internal/xwindow
label = %title:0:35:…%
label-foreground = ${colors.foreground}
label-font = 4

[module/i3]
type = internal/i3
format = <label-state><label-mode>
format-foreground = ${colors.foreground-alt}

index-sort = true
enable-scroll = false

label-mode-padding = 1
# label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.background}
label-urgent-padding = 1
label-urgent-underline = ${colors.alert}

label-visible = %index%
label-visible-background = ${colors.background-alt}
label-visible-padding = 1


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75

format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature-c%
label-font = 4
label-warn = %temperature-c%
label-warn-foreground = ${colors.orange}
label-warn-font = 4

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/wlan]
type = internal/network
interface = wlo1
interval = 3

# label-connected = %{A:nm-connection-editor&:} %essid%%{A}
label-connected =  %essid%
